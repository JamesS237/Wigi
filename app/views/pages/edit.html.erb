<h1>Editing page</h1>
<div class="large-6 large-centered columns">
	<%= form_tag("/pages/" + @title, method: "patch") do %>
	  <fieldset>
	    <legend><%= @title %></legend>
	    <label>Edit:
	      <%= text_area_tag("page", @contents, size: "24x6") %>
	    </label>
	    <%= submit_tag("Submit", {:class => "button"}) %>
	  </fieldset>
	<% end %>
</div>